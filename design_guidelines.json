{
  "identity": {
    "name": "Sentient Tracker",
    "persona": "E1 - The Anti-AI Designer",
    "tone": "Tactical, Insightful, Electric, High-Fidelity",
    "archetype": "Electric & Neon (Future/Speed)"
  },
  "typography": {
    "fonts": {
      "heading": {
        "family": "Chivo, sans-serif",
        "url": "https://fonts.googleapis.com/css2?family=Chivo:wght@300;400;700;900&display=swap",
        "weights": ["400", "700", "900"],
        "style": "tracking-tight uppercase"
      },
      "body": {
        "family": "Manrope, sans-serif",
        "url": "https://fonts.googleapis.com/css2?family=Manrope:wght@300;400;500;600&display=swap",
        "weights": ["300", "400", "600"]
      },
      "mono": {
        "family": "JetBrains Mono, monospace",
        "url": "https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500&display=swap",
        "usage": "Data points, metrics, code snippets"
      }
    },
    "scale": {
      "h1": "text-5xl md:text-7xl font-black tracking-tighter uppercase leading-none",
      "h2": "text-3xl md:text-4xl font-bold tracking-tight",
      "h3": "text-xl md:text-2xl font-bold tracking-tight",
      "p": "text-base md:text-lg leading-relaxed text-muted-foreground",
      "small": "text-sm font-medium tracking-wide uppercase text-muted-foreground",
      "mono": "font-mono text-sm tracking-tighter opacity-80"
    }
  },
  "colors": {
    "palette": {
      "background": "#09090b",
      "surface": "#121214",
      "surface_highlight": "#1C1C1F",
      "border": "rgba(255, 255, 255, 0.08)",
      "primary": "#D3F34B",
      "primary_foreground": "#000000",
      "secondary": "#FFFFFF",
      "secondary_foreground": "#000000",
      "accent": "#27272A",
      "muted": "#71717A",
      "success": "#00FF94",
      "warning": "#FCEE0A",
      "error": "#FF003C",
      "info": "#00E5FF"
    },
    "gradients": {
      "hero_glow": "radial-gradient(circle at 50% 50%, rgba(211, 243, 75, 0.15), transparent 70%)",
      "card_surface": "linear-gradient(180deg, rgba(255,255,255,0.03) 0%, rgba(255,255,255,0.0) 100%)",
      "scan_line": "linear-gradient(to bottom, transparent, #D3F34B, transparent)"
    },
    "usage": {
      "body_bg": "bg-[#09090b]",
      "card_bg": "bg-[#121214]/60 backdrop-blur-xl border border-white/5",
      "primary_cta": "bg-[#D3F34B] text-black hover:bg-[#D3F34B]/90 hover:shadow-[0_0_20px_rgba(211,243,75,0.4)]",
      "text_main": "text-white",
      "text_muted": "text-zinc-400"
    }
  },
  "visual_enhancers": {
    "borders": {
      "default": "border border-white/10",
      "active": "border-l-2 border-l-[#D3F34B]",
      "glass": "border border-white/5"
    },
    "shadows": {
      "glow": "0 0 40px -10px rgba(211, 243, 75, 0.2)",
      "card": "0 20px 40px -20px rgba(0, 0, 0, 0.5)",
      "inner_light": "inset 0 1px 0 0 rgba(255, 255, 255, 0.05)"
    },
    "effects": {
      "scanline": "bg-[url('https://grainy-gradients.vercel.app/noise.svg')] opacity-20",
      "glass_morphism": "backdrop-blur-xl bg-black/40"
    }
  },
  "layout": {
    "grid_system": "Bento Grid Mode B (High Density)",
    "container": "max-w-7xl mx-auto px-6 md:px-12",
    "spacing": {
      "section_gap": "gap-8 md:gap-12",
      "card_padding": "p-6 md:p-8",
      "widget_gap": "gap-4 md:gap-6"
    }
  },
  "components": {
    "buttons": {
      "primary": "rounded-none skew-x-[-10deg] px-8 py-3 bg-[#D3F34B] text-black font-bold uppercase tracking-widest hover:translate-y-[-2px] transition-all",
      "secondary": "rounded-none border border-white/20 hover:border-white/50 px-6 py-3 text-sm font-mono tracking-wider transition-colors",
      "ghost": "text-zinc-400 hover:text-white transition-colors"
    },
    "cards": {
      "game_card": "group relative overflow-hidden bg-[#121214] border border-white/5 hover:border-white/20 transition-all duration-500",
      "stat_card": "bg-black/40 border border-white/5 p-6 flex flex-col justify-between"
    },
    "inputs": {
      "default": "bg-black/50 border-white/10 focus:border-[#D3F34B] focus:ring-1 focus:ring-[#D3F34B] rounded-none font-mono text-sm placeholder:text-zinc-600"
    }
  },
